#include <iostream>
#include<algorithm>
using namespace std;

int main()
{
 int arr[4][4] , totalsum,arr2[4];
 cout <<" Hello! welcome to Short Distance calculation app "<<endl<<endl;
cout<<"enter the distances "<<endl;
 for(int w=0 ; w<4;w++){
     for(int i=0 ; i<4;i++){
         cin>>arr[w][i];

 }
 cout <<endl;
}

  for(int i=0;i<4;i++){
         totalsum=0;
        for(int j=0;j<4;j++){

        totalsum=totalsum+arr[i][j];
        }
        cout<<"Total distance for each way"<<i+1<<":"<<totalsum<<endl;
         arr2[i]=totalsum;}


       for(int i=0;i<4;i++){
        for(int j=0;j<4-i-1;j++){
            if(arr2[j]>arr2[j+1]){
                int temp=arr2[j];
                arr2[j]=arr2[j+1];
                arr2[j+1]=temp;
            }
        }}
        for(int k=0;k<4;k++){
            cout<<" "<<arr2[k]<<" ";
        }

        cout<<endl;
    }
